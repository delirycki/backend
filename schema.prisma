datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String  @id @default(cuid())
  name     String  @unique @default("")
  email    String  @unique @default("")
  password String
  events   Event[] @relation("Event_author")
}

model Event {
  id              String    @id @default(cuid())
  title           String    @default("")
  status          String?   @default("current")
  content         Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  startDate       DateTime?
  localization    String    @default("")
  drinks          Int?      @default(0)
  side            String    @default("")
  photo_filesize  Int?
  photo_extension String?
  photo_width     Int?
  photo_height    Int?
  photo_id        String?
  author          User?     @relation("Event_author", fields: [authorId], references: [id])
  authorId        String?   @map("author")
  tags            Tag[]     @relation("Event_tags")

  @@index([authorId])
}

model Tag {
  id     String  @id @default(cuid())
  name   String  @default("")
  events Event[] @relation("Event_tags")
}